{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AzureBlobStorage": {
    "ConnectionString": "${AZURE_BLOBS_CONNECTION}",
    "ContainerName": "${AZURE_BLOBS_CONTAINER}"
  },
  "Backup": {
    "RepeatInHours": "${BACKUP_REPEAT_IN_HOURS}",
    "Host": "${HOST}",
    "Port": "${PORT}",
    "UserName": "${USER_NAME}",
    "Password": "{PASSWORD}",
    "BackupFilePath": "${BACKUP_FILE_PATH}",
    "Databases": "${DATABASES}",
    "PgDumpPath": "${PG_DUMP_PATH}"
  },
  "AllowedHosts": "*"
}
